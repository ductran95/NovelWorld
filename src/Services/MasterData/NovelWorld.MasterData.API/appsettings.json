{
  "DbConfiguration": {
    "Type": "PostgreSQL",
    "ConnectionString": "Server=localhost;Port=5432;Database=novelworld;User ID=ductran;Password=abc*123;Integrated Security=true;Pooling=true;"
  },
  "StorageConfiguration": {
    "Type": "Local",
    "RootPath": "Attachments",
    "ConnectionString": ""
  },
  "EventBusConfiguration": {
    "Type": "",
    "SubscriptionClientName": "",
    "ConnectionString": "localhost",
    "RetryCount": 5
  },
  "OAuth2Configuration": {
    "Issuer": "https://localhost:44301",
    "Audience": "novelworld",
    "ApiScope": "novelworld_api",
    "RequireHttps": "true",
    "SwaggerClientId": "novelworld_masterdata_swagger",
    "SwaggerClientSecret": "",
    "SwaggerAppName": "NovelWorld Master Data API Swagger UI Client",
    "SwaggerRealm": ""
  },
  "DefaultUser": null,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Debug" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error",
        "Microsoft": "Error",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowOrigins": ["*"],
  "AllowedHosts": "*"
}
