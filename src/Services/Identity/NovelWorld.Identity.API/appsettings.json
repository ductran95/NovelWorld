{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "AttachmentConfig": {
    "Mode": "Local",
    "RootPath": "Attachments",
    "DefaultAvatar": "Attachments/no-avatar.jpg"
  },
  "UrlConfig": {
    "IdentityUrl": "",
    "MasterDataUrl": "",
    "LibraryUrl": "",
    "ReaderUrl": "",
    "WebUrl": ""
  },
  "EventBusConfig": {
    "Type": "",
    "SubscriptionClientName": "",
    "EventBusConnection": "localhost",
    "EventBusUserName": null,
    "EventBusPassword": null,
    "EventBusRetryCount": 5
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Debug" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error",
        "Microsoft": "Error",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss}] [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*"
}
