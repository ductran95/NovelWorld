@using NovelWorld.Data.DTO
@if (!ViewContext.ModelState.IsValid || Context.Items["Errors"] != null)
{
    <div class="alert alert-danger">
        <strong>Error</strong>
        @if (Context.Items["Errors"] != null)
        {
            var errors = Context.Items["Errors"] as IEnumerable<Error>;
            <div class="danger validation-summary-errors" data-valmsg-summary="true">
                <ul>
                    @foreach (var error in errors)
                    {
                        <li>@(!string.IsNullOrEmpty(error.Message) ? error.Message : error.Code)</li>
                    }
                </ul>
            </div>
        }
        @if (!ViewContext.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="danger"></div>
        }
    </div>
}