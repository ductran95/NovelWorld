@model NovelWorld.Identity.Data.ViewModels.Account.RegisterInputModel

<div class="register-page">
    <div class="lead">
        <h1>Register</h1>
    </div>

    <partial name="_ValidationSummary"/>

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Input account detail</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Register">
                        <div class="form-group">
                            <label asp-for="Account"></label>
                            <input type="text" class="form-control" placeholder="Account" asp-for="Account" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="FullName"></label>
                            <input type="text" class="form-control" placeholder="Full Name" asp-for="FullName">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordCheck"></label>
                            <input type="password" class="form-control" placeholder="Re-input Password" asp-for="PasswordCheck" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" class="form-control" placeholder="Phone Number" asp-for="PhoneNumber">
                        </div>
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                        </div>
                        <div class="form-group">
                            <label asp-for="DoB"></label>
                            <input type="date" class="form-control" asp-for="DoB">
                        </div>
                        <button class="btn btn-primary" name="button" value="register">Register</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>