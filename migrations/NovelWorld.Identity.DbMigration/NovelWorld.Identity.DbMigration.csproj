    <ItemGroup>
      <ProjectReference Include="..\..\src\Services\Identity\NovelWorld.Identity.Infrastructure\NovelWorld.Identity.Infrastructure.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="3.1.9">
